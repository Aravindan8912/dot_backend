{
  "info": {
    "name": "SuperMarket API",
    "description": "Flow: 1.Create Category → 2.Create Customer → 3.Create Product → 4.Place Order. Sample data included.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://localhost:5001" },
    { "key": "categoryId", "value": "" },
    { "key": "customerId", "value": "" },
    { "key": "productId", "value": "" },
    { "key": "orderId", "value": "" }
  ],
  "item": [
    {
      "name": "Flow (run in order)",
      "item": [
        {
          "name": "1. Create Category",
          "event": [{ "listen": "test", "script": { "exec": ["if (pm.response.code === 200) { const j = pm.response.json(); if (j.id) pm.collectionVariables.set('categoryId', j.id); }"], "type": "text/javascript" } }],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Groceries\"\n}" },
            "url": "{{baseUrl}}/api/categories"
          }
        },
        {
          "name": "2. Create Customer",
          "event": [{ "listen": "test", "script": { "exec": ["if (pm.response.code === 200) { const j = pm.response.json(); if (j.id) pm.collectionVariables.set('customerId', j.id); }"], "type": "text/javascript" } }],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+1-555-0100\"\n}" },
            "url": "{{baseUrl}}/api/customers"
          }
        },
        {
          "name": "3. Create Product",
          "event": [{ "listen": "test", "script": { "exec": ["if (pm.response.code === 200) { const j = pm.response.json(); if (j.id) pm.collectionVariables.set('productId', j.id); }"], "type": "text/javascript" } }],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Organic Milk 1L\",\n  \"price\": 3.49,\n  \"stock\": 50,\n  \"categoryId\": \"{{categoryId}}\"\n}" },
            "url": "{{baseUrl}}/api/products"
          }
        },
        {
          "name": "4. Place Order",
          "event": [{ "listen": "test", "script": { "exec": ["if (pm.response.code === 200) { const j = pm.response.json(); if (j && j.id) pm.collectionVariables.set('orderId', j.id); }"], "type": "text/javascript" } }],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"customerId\": \"{{customerId}}\",\n  \"items\": [\n    { \"productId\": \"{{productId}}\", \"quantity\": 2 }\n  ]\n}" },
            "url": "{{baseUrl}}/api/orders"
          }
        }
      ]
    },
    {
      "name": "Sample data – Categories",
      "item": [
        {
          "name": "Create category – Groceries",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Groceries\"\n}" },
            "url": "{{baseUrl}}/api/categories"
          }
        },
        {
          "name": "Create category – Beverages",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Beverages\"\n}" },
            "url": "{{baseUrl}}/api/categories"
          }
        },
        {
          "name": "Create category – Dairy",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Dairy\"\n}" },
            "url": "{{baseUrl}}/api/categories"
          }
        }
      ]
    },
    {
      "name": "Sample data – Customers",
      "item": [
        {
          "name": "Create customer – John Doe",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+1-555-0100\"\n}" },
            "url": "{{baseUrl}}/api/customers"
          }
        },
        {
          "name": "Create customer – Jane Smith",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Jane Smith\",\n  \"email\": \"jane.smith@example.com\",\n  \"phone\": \"+1-555-0200\"\n}" },
            "url": "{{baseUrl}}/api/customers"
          }
        },
        {
          "name": "Create customer – Bob Wilson",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Bob Wilson\",\n  \"email\": \"bob.wilson@example.com\",\n  \"phone\": \"+1-555-0300\"\n}" },
            "url": "{{baseUrl}}/api/customers"
          }
        }
      ]
    },
    {
      "name": "Sample data – Products",
      "item": [
        {
          "name": "Create product – Milk (use categoryId from GET categories)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Organic Milk 1L\",\n  \"price\": 3.49,\n  \"stock\": 50,\n  \"categoryId\": \"{{categoryId}}\"\n}" },
            "url": "{{baseUrl}}/api/products"
          }
        },
        {
          "name": "Create product – Bread",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Whole Grain Bread\",\n  \"price\": 2.99,\n  \"stock\": 80,\n  \"categoryId\": \"{{categoryId}}\"\n}" },
            "url": "{{baseUrl}}/api/products"
          }
        },
        {
          "name": "Create product – Eggs",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Free Range Eggs (12pk)\",\n  \"price\": 4.99,\n  \"stock\": 60,\n  \"categoryId\": \"{{categoryId}}\"\n}" },
            "url": "{{baseUrl}}/api/products"
          }
        }
      ]
    },
    {
      "name": "Sample data – Orders",
      "item": [
        {
          "name": "Place order – single item",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"customerId\": \"{{customerId}}\",\n  \"items\": [\n    { \"productId\": \"{{productId}}\", \"quantity\": 2 }\n  ]\n}" },
            "url": "{{baseUrl}}/api/orders"
          }
        },
        {
          "name": "Place order – multiple items",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"customerId\": \"{{customerId}}\",\n  \"items\": [\n    { \"productId\": \"{{productId}}\", \"quantity\": 2 },\n    { \"productId\": \"<paste-second-product-id>\", \"quantity\": 1 }\n  ]\n}" },
            "url": "{{baseUrl}}/api/orders",
            "description": "Replace <paste-second-product-id> with another product GUID from GET /api/products"
          }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        { "name": "Get all categories", "request": { "method": "GET", "url": "{{baseUrl}}/api/categories" }},
        { "name": "Get category by id", "request": { "method": "GET", "url": "{{baseUrl}}/api/categories/{{categoryId}}" }}
      ]
    },
    {
      "name": "Customers",
      "item": [
        { "name": "Get all customers", "request": { "method": "GET", "url": "{{baseUrl}}/api/customers" }},
        { "name": "Get customer by id", "request": { "method": "GET", "url": "{{baseUrl}}/api/customers/{{customerId}}" }}
      ]
    },
    {
      "name": "Products",
      "item": [
        { "name": "Get all products", "request": { "method": "GET", "url": "{{baseUrl}}/api/products" }},
        { "name": "Get product by id", "request": { "method": "GET", "url": "{{baseUrl}}/api/products/{{productId}}" }}
      ]
    },
    {
      "name": "Orders",
      "item": [
        { "name": "Get all orders", "request": { "method": "GET", "url": "{{baseUrl}}/api/orders" }},
        { "name": "Get order by id", "request": { "method": "GET", "url": "{{baseUrl}}/api/orders/{{orderId}}" }}
      ]
    }
  ]
}
